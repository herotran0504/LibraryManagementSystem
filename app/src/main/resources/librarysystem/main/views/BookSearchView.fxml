<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="36.0"
	prefHeight="36.0"
	prefWidth="713.0"
	xmlns="http://javafx.com/javafx/17.0.2-ea"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="book.view.BookSearchView">
	<Pane layoutY="-1.0"
		prefHeight="31.0"
		prefWidth="714.0">
		<Label layoutX="9.0"
			layoutY="5.0"
			prefHeight="17.0"
			prefWidth="159.0"
			text="Search by ISBN">
			<font>
				<Font name="System Bold"
					size="12.0" />
			</font>
		</Label>
		<TextField fx:id="searchPublicationId"
			layoutX="178.0"
			layoutY="4.0"
			prefHeight="25.0"
			prefWidth="122.0" />
		<Label layoutX="341.0"
			layoutY="7.0"
			prefHeight="17.0"
			prefWidth="129.0"
			text="Search by Title">
			<font>
				<Font name="System Bold"
					size="12.0" />
			</font>
		</Label>
		<TextField fx:id="searchPublicationTitle"
			layoutX="475.0"
			layoutY="3.0"
			prefHeight="25.0"
			prefWidth="213.0" />
	</Pane>
	<TableView fx:id="tableView"
		layoutY="36.0"
		prefHeight="195.0"
		prefWidth="713.0">
		<columns>
			<TableColumn fx:id="collPublicationId"
				prefWidth="93.0"
				text="ISBN/Issue" />
			<TableColumn fx:id="colTitle"
				prefWidth="165.0"
				text="Title" />
			<TableColumn fx:id="colAvailableCopies"
				prefWidth="104.0"
				text="Available Copies" />
			<TableColumn fx:id="colTotalCopies"
				prefWidth="101.0"
				text="Total Copies" />
			<TableColumn fx:id="colMaxCheckoutLength"
				prefWidth="113.0"
				text="Max Length" />
		</columns>
	</TableView>
</AnchorPane>
